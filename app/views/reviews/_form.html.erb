<%= form_for(@review, :html => {class: "form-horizontal"}) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :product_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.collection_select :product_id, @products, :id, :title,
        {prompt: "Select the product this review refers to"}, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :reviewed_by_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.collection_select :reviewer_id, @reviewers, :id, :name,
        {prompt: "Select the reviewer"}, class: "form-control" %>
      </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
