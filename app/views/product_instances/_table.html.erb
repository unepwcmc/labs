<table class="display table" id="product_instances_table">
  <thead>
    <tr class="filters">
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th>Name</th>
      <th>Product</th>
      <th>Stage</th>
      <th>Branch</th>
      <th>Installations</th>
      <th>Closing</th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
    </tr>
  </thead>

  <tbody>
    <% @products_instances.each do |instance| %>
      <tr>
        <td><%= instance.name %></td>
        <td><%= link_to instance.product.title, product_path(instance.product) %></td>
        <td><%= instance.stage %></td>
        <td><%= instance.branch %></td>
        <td><%= instance.installations.size %></td>
        <td class='closing'><%= instance.closing %></td>
        <td>
          <%= link_to 'Notes', '#', {title: "#{display_info(instance)}", :'data-html' => 'true'} %>
        </td>
        <td><%= link_to(instance) { fa_icon "eye" } %></td>
        <td><%= link_to(edit_product_instance_path(instance)) { fa_icon "pencil" } %></td>
        <td><%= link_to(instance, method: :delete, data: { confirm: "Are you sure?" }){ fa_icon "trash" } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
