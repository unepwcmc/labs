<div class="page-header">
  <!-- <h1>Our recent projects</h1> -->
	<h1>We make excellent tools to explain and explore the value of the world's natural resources.</h1>
	<h4>
		Some of our recent projects are described below. If you want to know any more, email 
		<a href="mailto:craig.mills@unep-wcmc.org?subject=labs">Craig Mills</a>
	</h4>
</div>

<div class="row">
<% @projects.each_with_index do |project, i| %>
  <div class="span4 project" data-url='<%= project.url %>'>
    <%= image_tag project.screenshot.thumb.url %>
    <p>
      <h3><%= link_to project.title, project.url %></h3>
      <%= project.description %>
      <% if user_signed_in? %>
        <%= link_to "Show", project_path(project) %>
        <%= link_to "Edit", edit_project_path(project) %>
      <% end %>
    </p>
  </div>
  <%# Start a new row every third project, except if it's the last one %>
  <% if (i==@projects.length-1) %>
    </div>
  <% elsif (i!=0 && (i+1)%3==0) %>
    </div>
    <div class="row">
  <% end %>
<% end %>
