<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert-message block-message error">
      <p><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</p>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :description %>
    <div class="input">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :url %>
    <div class="input">
      <%= f.text_field :url %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :screenshot %>
    <div class="input">
      <%= f.file_field :screenshot %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
