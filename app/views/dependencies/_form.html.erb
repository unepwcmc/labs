<%= form_for(@dependency, :html => {class: "form-horizontal"}) do |f| %>
  <% if @dependency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dependency.errors.count, "error") %> prohibited this dependency from being saved:</h2>

      <ul>
        <% @dependency.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :sub_product_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :sub_product_id, Product.order(:title),:id,:title,
        {prompt: "Select the dependant product"}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :master_product_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :master_product_id, Product.order(:title),:id,:title,
        {prompt: "Select the master product"}, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>