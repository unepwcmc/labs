<h1>Listing installations</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Server</th>
      <th>Name</th>
      <th>Role</th>
      <th>Stage</th>
      <th>Branch</th>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @installations.each do |installation| %>
      <tr>
        <td><%= installation.project %></td>
        <td><%= installation.server %></td>
        <td><%= installation.name %></td>
        <td><%= installation.role %></td>
        <td><%= installation.stage %></td>
        <td><%= installation.branch %></td>
        <td><%= installation.url %></td>
        <td><%= installation.description %></td>
        <td><%= link_to 'Show', installation %></td>
        <td><%= link_to 'Edit', edit_installation_path(installation) %></td>
        <td><%= link_to 'Destroy', installation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

