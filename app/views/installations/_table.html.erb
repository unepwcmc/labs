<table class="display table" id="installations_table">
  <thead>
    <tr class="filters">
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th>Instance</th>
      <th>Product</th>
      <th>Server</th>
      <th>Role</th>
      <th>Closing</th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
    </tr>
  </thead>

  <tbody>
    <% @installations.each do |installation| %>
      <tr>
        <td>
          <%= link_to installation.product_instance.name,
            product_instance_path(installation.product_instance) %>
        </td>
        <td>
          <%= link_to installation.product.title,
            product_path(installation.product) %>
        </td>
        <td><%= link_to installation.server.name, server_path(installation.server) %></td>
        <td><%= installation.role %></td>
        <td class='closing'><%= installation.closing %></td>
        <td><%= link_to 'Notes', '#', {title: "#{installation.description.presence || "-"}"} %></td>
        <td><%= link_to(installation) { fa_icon "eye" } %></td>
        <td><%= link_to(edit_installation_path(installation)) { fa_icon "pencil" } %></td>
        <td><%= link_to(installation, method: :delete, data: { confirm: "Are you sure?" }){ fa_icon "trash" } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
